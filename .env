# Back-end (Spring Boot)

# --- DB ---
POSTGRES_URL=jdbc:postgresql://localhost:5432/eventmanager
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# --- MongoDB ---
MONGODB_URI=mongodb://localhost:27017/eventmanager

# --- Google OAuth2 (replace with your credentials) ---

# Optional (defaults in application.properties are ok)
GOOGLE_OAUTH_SCOPES=openid,profile,email
GOOGLE_OAUTH_REDIRECT_URI=http://localhost:8080/login/oauth2/code/google

# --- JWT ---
# Use a long random value (>= 32 chars). Example:
JWT_SECRET=N7cQ2kX9sR5VwP3mD8aJH1Z0T6bL4YgF
JWT_ISSUER=eventmanager
JWT_EXP_MINUTES=120

# --- Front redirect after login (must exist on front) ---
OAUTH2_SUCCESS_REDIRECT=http://localhost:3000/auth/callback

# --- CORS ---
# Comma-separated list:
CORS_ALLOWED_ORIGINS=http://localhost:3000
